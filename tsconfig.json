{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "target": "es2020",
    "moduleResolution": "node",
    "module": "commonjs",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "lib": [
      "es2020",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "font": [
        "public/font"
      ],
      "emoji": [
        "public/emoji"
      ]
    }
  },
  "include": [
    "src/**/*",
    "src/**/*.vue",
    "types/shims-global.d.ts",
    "types/shims-module.d.ts"
  ]
}