{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "jsx": "preserve",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "font": [
        "public/font"
      ],
      "emoji": [
        "public/emoji"
      ]
    }
  },
  "include": [
    "src/**/*",
    "src/**/*.vue",
    "types/shims-global.d.ts",
    "types/shims-module.d.ts"
  ]
}